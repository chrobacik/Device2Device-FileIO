<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:Device2DeviceFileIO" x:Class="Device2DeviceFileIO.MainPage">
	<ContentPage.Content>
        <StackLayout Padding="10">
            <Label Text="Welcome to Device2Device File.IO" VerticalOptions="Center" />
            <Button x:Name="btnGoToSelectFile" Text="Go To Select File Page"></Button>
            <Button x:Name="btnGoToBarcodeScan" Text="Got To Barcode Scanning"></Button>
            <Button x:Name="btnGoToBarcodeShow" Text="Got To Barcode Show"></Button>

            <ProgressBar x:Name="prgUploadFile" Progress="0"></ProgressBar>
            <Button x:Name="btnUploadFile" Text="Upload File"></Button>
            <Button x:Name="btnDownloadFile" Text="Download File"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
