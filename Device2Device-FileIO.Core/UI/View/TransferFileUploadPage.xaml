<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Device2DeviceFileIO.UI.View.TransferFileUploadPage">

    <StackLayout Spacing="0" Padding="0">

        <StackLayout Spacing="0" Padding="32" BackgroundColor="{StaticResource backgroundColorUpload}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">

            <StackLayout Orientation="Horizontal" BackgroundColor="White" Padding="16">
                <Label Text="Name:" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="112" />
                <Label Text="{Binding UploadTransferFile.Name}" HorizontalOptions="FillAndExpand" />
            </StackLayout>
            
            <BoxView HeightRequest="8" />

            <StackLayout Orientation="Horizontal" BackgroundColor="White" Padding="16">
                <Label Text="GrÃ¶sse:" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="112" />
                <Label Text="{Binding UploadTransferFile.Size}" HorizontalOptions="FillAndExpand" />
            </StackLayout>

            <BoxView HeightRequest="8" />

            <StackLayout Orientation="Horizontal" BackgroundColor="White" Padding="16">
                <Label Text="Type:" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="112" />
                <Label Text="{Binding UploadTransferFile.Type}" HorizontalOptions="FillAndExpand" />
            </StackLayout>

            <BoxView HeightRequest="8" />

            <StackLayout Orientation="Horizontal" BackgroundColor="White" Padding="16">
                <Label Text="Ablaufdatum:" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="112" />
                <Label Text="22.12.2017" HorizontalOptions="FillAndExpand" />
            </StackLayout>
           
            <StackLayout Orientation="Horizontal" Padding="0,32,0,16" HorizontalOptions="FillAndExpand">
                <Button x:Name="btnSend" TextColor="Black" Text="Senden" Command="{Binding StartUploadCommand}" BackgroundColor="{StaticResource backgroundColorDefault}" HorizontalOptions="FillAndExpand"></Button>
            </StackLayout>
                  
        </StackLayout>

    </StackLayout>

</ContentPage>
