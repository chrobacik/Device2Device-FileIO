                <Label Text="{Binding UploadTransferFile.Size}" HorizontalOptions="FillAndExpand" />
            </StackLayout>

            <BoxView HeightRequest="8" />

            <StackLayout Orientation="Horizontal" BackgroundColor="White" Padding="16">
                <Label Text="Type:" HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="112" />
